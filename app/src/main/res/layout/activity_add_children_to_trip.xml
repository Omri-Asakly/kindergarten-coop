<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddChildrenToTrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="340dp"
            android:layout_marginRight="340dp"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTxt"
                    android:layout_width="400dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="182dp"
                    android:layout_marginRight="182dp"
                    android:layout_marginBottom="596dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Add Children"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add children to trips"
                    android:textColor="@color/textAlt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="199dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Morning"
                        android:textColor="@color/mainText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="201dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Evening"
                        android:textColor="@color/mainText" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="118dp"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/firstTxtM"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="First Child"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/firstImgM"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-210dp"
                        android:layout_marginTop="7dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/custom_search_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="118dp"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/secondTxtM"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="Second Child"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/secondImgM"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-210dp"
                        android:layout_marginTop="7dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/custom_search_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/thirdTxtM"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:layout_marginBottom="264dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="Third Child"
                        android:inputType="textAutoCorrect"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dateTxt" />

                    <ImageButton
                        android:id="@+id/thirdImgM"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-214dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"
                        android:radius="10dp"
                        app:srcCompat="@drawable/custom_search_icon" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="370dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <AutoCompleteTextView
                        android:id="@+id/firstTxtE"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="First Child"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/firstImgE"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-210dp"
                        android:layout_marginTop="7dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/custom_search_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/secondTxtE"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="Second Child"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/secondImgE"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-214dp"
                        android:layout_marginTop="7dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/custom_search_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/thirdTxtE"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="182dp"
                        android:layout_marginRight="182dp"
                        android:layout_marginBottom="264dp"
                        android:background="@drawable/custom_input_trip"
                        android:hint="Third Child"
                        android:inputType="textAutoCorrect"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dateTxt" />

                    <ImageButton
                        android:id="@+id/thirdImgE"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-219dp"
                        android:layout_marginLeft="-214dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"
                        android:radius="10dp"
                        app:srcCompat="@drawable/custom_search_icon" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addScheduleBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="147dp"
                android:layout_marginLeft="147dp"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:background="@drawable/custom_button"
                android:textColor="#FFFF"
                android:text="Add " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_car"
                android:orientation="vertical">


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
