        android:background="#001B1A1A"
        android:gravity="center"
        android:text="Today's View"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/mainText"
        app:layout_constraintBottom_toTopOf="@+id/etMorningPerson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt2" />

    <EditText
        android:id="@+id/etMorningPerson"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/textAlt"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MorningTxt"
        app:layout_constraintTop_toBottomOf="@+id/todayTxt" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
