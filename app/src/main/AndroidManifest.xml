<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uni.haifa.kgco_op">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KGCoop">
        <activity android:name=".SettingsActivity"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity
            android:name=".ChildrenRegister"
            android:parentActivityName=".UserRegister"
            tools:ignore="ExtraText" />
        <activity
            android:name=".UserRegister"
            android:parentActivityName=".MainActivity"
            tools:ignore="ExtraText" />
        <activity
            android:name=".Settings"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity
            android:name=".EditParent"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity
            android:name=".Delete"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity android:name=".AddChildrenToTrip"
            android:parentActivityName=".FixSchedule"
            tools:ignore="ExtraText"
            />
        <activity
            android:name=".FixSchedule"
            android:parentActivityName=".weeklySchedule"
            tools:ignore="ExtraText" />
        <activity
            android:name=".UserList"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity android:name=".AddChildrenToNewParent" />
        <activity
            android:name=".AddUser"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity
            android:name=".tripInfo"
            android:parentActivityName=".weeklySchedule"
            tools:ignore="ExtraText" />
        <activity
            android:name=".weeklySchedule"
            android:parentActivityName=".MainPage"
            tools:ignore="ExtraText" />
        <activity android:name=".MainPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>